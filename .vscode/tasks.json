{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (msvc-debug)",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "call \"${workspaceFolder}\\build_msvc.bat\" msvc-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build (msvc-debug) No Format",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "call \"${workspaceFolder}\\build_msvc.bat\" msvc-debug --no-format"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build (msvc-debug) Reconfigure",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "call \"${workspaceFolder}\\build_msvc.bat\" msvc-debug --configure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build (msvc-release)",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "call \"${workspaceFolder}\\build_msvc.bat\" msvc-release"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build (msvc-debug-asan)",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "call \"${workspaceFolder}\\build_msvc.bat\" msvc-debug-asan"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}